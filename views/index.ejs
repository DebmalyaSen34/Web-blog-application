    <h1>Your blogs</h1>
    <hr>
    <div class="link-box">
      <% for(let article in articleData){ %>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"> <%= articleData[article]["title"] %> </h5>
            <h6 class="card-subtitle mb-2 text-body-secondary"> <%= articleData[article]["sub-title"] %> </h6>
            <p class="card-text"> <%= articleData[article]["sub-content"] %> </p>
            <a href="yourBlog/<%= articleData[article]["id"] %>" class="card-link">Full blog</a>
            <form action="/del/<%= articleData[article]["id"] %>" method="post">
            <input type="submit" value="Delete" id="delete">
            </form>
          </div>
        </div>
      <% } %>
    </div>
